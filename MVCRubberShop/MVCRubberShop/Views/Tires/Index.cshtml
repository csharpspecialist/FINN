@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TireWidth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sidewall)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RimDiameter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MSRP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
